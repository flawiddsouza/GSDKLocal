{
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": { "recommended": true }
  },
  "files": {
    "include": ["**/*.ts"]
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 320
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  }
}
